= search_form_for @q, url: admin_users_path do |f|
  .row.my-2
    .col-6
      .form-group.mb-3.string.required
        = f.label t('users.search.name')
        = f.text_field :name_cont, { class: 'form-control string' }
    .col-4
      .form-group.mb-3.string.required
        = f.label t('users.search.email')
        = f.text_field :email_cont, { class: 'form-control string' }
    .col-2
      = f.submit t('search'), { class: 'btn btn-primary' }
      = link_to t('reset'), admin_users_path, class: 'btn btn-outline-primary'
