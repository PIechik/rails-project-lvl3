= search_form_for @q, url: admin_categories_path do |f|
  .row.my-2
    .col-6
      .form-group.mb-3.string.required
        = f.label t('categories.search.name')
        = f.text_field :name_cont, { class: 'form-control string' }
    .col-2
      = f.submit t('search'), { class: 'btn btn-primary' }
      = link_to t('reset'), admin_categories_path, class: 'btn btn-outline-primary'
